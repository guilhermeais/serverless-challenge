  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "jest": "^29.3.1",
    "serverless-offline": "^11.3.0"
  },
  "scripts": {
    "deploy": "sls deploy --verbose",
    "dynamodb:emulator": "docker-compose up -d dynamodb && bash wait-for-dynamodb-container.sh",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules  npx jest --runInBand --passWithNoTests --silent --noStackTrace",
    "test:verbose": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules  npx jest --passWithNoTests --runInBand",
    "test:unit": "npm run test -- --onlyChanged --watch -c jest-unit-config.js",
    "pretest:integration": "npm run dynamodb:emulator",
    "test:integration": "npm run test -- --onlyChanged --watch -c jest-integration-config.js",
    "posttest:integration": "docker-compose down"
  },
